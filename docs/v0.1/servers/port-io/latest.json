{
  "server": {
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-29/server.schema.json",
    "name": "io.port/Port",
    "description": "Port.io mcp server",
    "repository": {
      "url": "https://github.com/port-labs/remote-mcp-server",
      "source": "github"
    },
    "version": "1.0.2",
    "packages": [
      {
        "registryType": "npm",
        "identifier": "mcp-remote",
        "runtimeHint": "npx",
        "transport": {
          "type": "stdio"
        },
        "runtimeArguments": [
          {
            "type": "named",
            "name": "-y"
          }
        ],
        "packageArguments": [
          {
            "type": "positional",
            "value": "https://mcp.us.port.io/v1"
          },
          {
            "type": "named",
            "name": "--header",
            "value": "x-read-only-mode: 1"
          }
        ]
      }
    ]
  },
  "_meta": {
    "io.modelcontextprotocol.registry/official": {
      "slug": "port-io",
